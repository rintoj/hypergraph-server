{
  "name": "hypergraph-server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Spin off a service to serve a rest or graphql endpoint",
  "author": {
    "name": "Rinto Jose",
    "email": "rintoj@gmail.com"
  },
  "repository": "https://github.com/rintoj/hypergraph-server.git",
  "scripts": {
    "test": "jest",
    "lint": "eslint --fix && tsc -p . --noEmit && yarn prettier",
    "prettier": "prettier --write \"**/src/**/*.{ts,tsx}\" -c",
    "build": "rimraf dist && tsc -p .",
    "semantic-release": "semantic-release",
    "cli": "ts-node src/index.ts"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@tsed/common": "^6.59.0",
    "@tsed/platform-express": "^6.59.2",
    "@tsed/socketio": "^6.59.9",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "method-override": "^3.0.0",
    "node-fetch": "2.6.7",
    "socket.io": "^4.1.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.1",
    "@types/method-override": "^0.0.32",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.3.1",
    "jest": "^29.5.0",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.6",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "collectCoverage": false,
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
          ],
          "isolatedModules": true,
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/src/decorators/**",
      "!**/src/error/**",
      "!**/test/**"
    ]
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
